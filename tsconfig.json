{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowUmdGlobalAccess": true, // access UMD module via namespace
    "noImplicitAny": true,
    "strictNullChecks": true
  }
}
